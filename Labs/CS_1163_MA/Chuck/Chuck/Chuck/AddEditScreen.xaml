<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chuck.AddEditScreen">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="Quote"/>
            <Button x:Name="SaveButton" Text="Save" TextColor="Blue" Clicked="SaveButton_Clicked"></Button>
            <Button x:Name="DeleteButton" Text="Delete" TextColor="Red" IsVisible="False" Clicked="DeleteButton_Clicked"></Button>
            <Button x:Name="BackButton" Text="Back" Clicked="BackButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>